<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Current Streak -->
    <TextView
        android:id="@+id/current_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_current_streak"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:textSize="20sp"/>

    <!-- Best Streak -->
    <TextView
        android:id="@+id/best_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_streak"
        android:layout_centerHorizontal="true"
        android:text="@string/str_best_streak"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <!-- Encouragement -->
    <TextView
        android:id="@+id/encouragement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/best_streak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        android:text="@string/str_encouragement"
        android:textAlignment="center"
        android:textSize="20sp"/>
</RelativeLayout>