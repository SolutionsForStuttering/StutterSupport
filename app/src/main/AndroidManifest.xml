<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myself.stuttersupport">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-feature android:name="android.hardware.screen.portrait" />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CarGameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".TrainGameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DeepBreatheActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SettingsScreenActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LicensesActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ScriptReadingActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>